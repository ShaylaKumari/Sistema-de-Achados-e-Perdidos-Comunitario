generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario{
  id    Int     @id @default(autoincrement())
  name  String
  phone   String
  email String   @unique
  itens item[]
}

model categoria {
  id    Int     @id @default(autoincrement())
  name  String   
  itens item[]
}

model item {
  code         Int      @id @default(autoincrement()) // Gera automaticamente um valor Ãºnico
  name         String
  category     categoria @relation(fields: [categoryId], references: [id])
  categoryId   Int
  date         DateTime  @default(now())
  location     String
  contact      String
  color        String
  photo        String?
  status       String
  user         usuario   @relation(fields: [userId], references: [id])
  userId       Int
}


