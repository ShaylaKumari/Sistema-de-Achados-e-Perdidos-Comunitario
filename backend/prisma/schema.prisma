generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id    Int     @id @default(autoincrement())
  nome  String
  telefone   String
  email String   @unique
  itens Item[]
}

model category {
  id    Int     @id @default(autoincrement())
  nome  String
  itens Item[]
}

model item {
  code       String    @id
  name         String
  category    category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  date         DateTime  @default(now())
  location  String
  contact      String
  color          String
  photo         String?   // opcional
  status       String    // "Perdido" ou "Encontrado"
  user      user   @relation(fields: [userd], references: [id])
  userId    Int
}


