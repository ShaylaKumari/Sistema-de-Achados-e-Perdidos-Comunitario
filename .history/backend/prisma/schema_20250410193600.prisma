generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env
}

model Item {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  category  String
  date      DateTime
  location  String
  contact   String
  color     String
  photo     String? // Opcional
  status    String // "Perdido" ou "Encontrado"
  createdAt DateTime @default(now())
}
